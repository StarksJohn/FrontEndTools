{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6","es2017.object"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "~/*": ["src/*"],
    },
    "skipLibCheck": true /* 忽略所有的声明文件（ *.d.ts）的类型检查。 */
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
